<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FitLife.Views.WorkoutEditPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:FitLife.ViewModels"
    xmlns:models="clr-namespace:FitLife.Models"
    x:DataType="vm:WorkoutEditViewModel"
    Title="Workout"
    Padding="16">

    <ScrollView>
        <VerticalStackLayout Spacing="12">

            <!-- Back button (same style as MealEditPage) -->
            <Button Text="Back"
                    Clicked="OnBackClicked"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource PrimaryColor}"
                    HorizontalOptions="Start" />

            <!-- Page title -->
            <Label Text="{Binding PageTitle}"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="{StaticResource PrimaryColor}" />

            <!-- Service selection -->
            <Label Text="Service" />
            <Picker ItemsSource="{Binding Services}"
                    ItemDisplayBinding="{Binding Name}"
                    SelectedItem="{Binding SelectedService}" />

            <!-- Workout title -->
            <Label Text="Title" />
            <Entry Text="{Binding Title}"
                   Placeholder="Workout title" />

            <!-- Category -->
            <Label Text="Category" />
            <Entry Text="{Binding Category}"
                   Placeholder="e.g. Strength, Yoga" />

            <!-- Level -->
            <Label Text="Level" />
            <Entry Text="{Binding Level}"
                   Placeholder="Beginner / Intermediate / Advanced" />

            <!-- Duration -->
            <Label Text="Duration (min)" />
            <Entry Text="{Binding DurationMins}"
                   Keyboard="Numeric" />

            <!-- Calories -->
            <Label Text="Calories" />
            <Entry Text="{Binding Calories}"
                   Keyboard="Numeric" />

            <!-- Description -->
            <Label Text="Description" />
            <Editor Text="{Binding Description}"
                    AutoSize="TextChanges"
                    HeightRequest="80" />

            <!-- Save button (full-width, like meal page) -->
            <Button Text="Save"
                    Command="{Binding SaveCommand}"
                    BackgroundColor="{StaticResource PrimaryColor}"
                    TextColor="White"
                    CornerRadius="20"
                    Margin="0,12,0,0" />

            <!-- Delete button (full-width, like meal page) -->
            <Button Text="Delete"
                    Command="{Binding DeleteCommand}"
                    IsVisible="{Binding CanDelete}"
                    BackgroundColor="Red"
                    TextColor="White"
                    CornerRadius="20" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
