<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FitLife.Views.ServicesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:FitLife.ViewModels"
    xmlns:models="clr-namespace:FitLife.Models"
    x:DataType="viewModels:ServiceListViewModel"
    Title="Services">

    <ContentPage.Content>
        <VerticalStackLayout Padding="16" Spacing="12">

            <!-- page heading -->
            <Label Text="Available Services"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="{StaticResource PrimaryColor}" />

            <!-- add service button (visible only for admin) -->
            <Button x:Name="AddServiceButton"
                    Text="Add Service"
                    HorizontalOptions="End"
                    Clicked="OnAddServiceClicked"
                    IsVisible="False" />

            <CollectionView ItemsSource="{Binding Services}"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:ServiceApiModel">
                        <Frame Padding="12"
                               Margin="0,0,0,8"
                               HasShadow="True">

                            <!-- tap to open service details -->
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer
                                    Tapped="OnServiceTapped"
                                    CommandParameter="{Binding}" />
                            </Frame.GestureRecognizers>

                            <VerticalStackLayout Spacing="4">
                                <!-- service name -->
                                <Label Text="{Binding Name}"
                                       FontAttributes="Bold"
                                       FontSize="18"
                                       TextColor="{StaticResource TextDark}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
