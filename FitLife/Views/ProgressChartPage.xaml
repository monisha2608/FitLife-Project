<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FitLife.Views.ProgressChartPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:FitLife.ViewModels"
    xmlns:models="clr-namespace:FitLife.Models"
    x:DataType="vm:ProgressViewModel"
    Title="Progress"
    Padding="16">

    <VerticalStackLayout Spacing="16">

        <!-- Heading -->
        <Label Text="Weekly Activity"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="{StaticResource PrimaryColor}"
               Margin="0,0,0,6"
               HorizontalOptions="Center" />

        <!-- Summary -->
        <Frame Style="{StaticResource Card}">
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                <VerticalStackLayout Spacing="6">
                    <Label Text="Weekly Minutes vs Goal"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextDark}" />
                    <ProgressBar Progress="{Binding ProgressRatio}"
                                 HeightRequest="12"
                                 ProgressColor="{StaticResource AccentColor}" />
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="2"
                                     HorizontalOptions="End"
                                     VerticalOptions="Center">
                    <Label Text="{Binding MinutesSum, StringFormat='Done: {0} min'}"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextDark}"
                           HorizontalOptions="End" />
                    <Label Text="{Binding WeeklyGoalMinutes, StringFormat='Goal: {0} min'}"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextDark}"
                           HorizontalOptions="End" />
                </VerticalStackLayout>
            </Grid>
        </Frame>

        <!-- Bar chart -->
        <Frame Style="{StaticResource Card}">
            <CollectionView
                ItemsSource="{Binding Weekly}"
                SelectionMode="None"
                HeightRequest="240"
                HorizontalOptions="FillAndExpand"
                HorizontalScrollBarVisibility="Never">

                <!-- Evenly fill row: 7 columns across the width -->
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical"
                                     Span="7"
                                     HorizontalItemSpacing="24"
                                     VerticalItemSpacing="0" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:ProgressEntry">
                        <!-- No WidthRequest="Auto" (invalid). Let it stretch. -->
                        <VerticalStackLayout
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="End"
                            Spacing="8"
                            Padding="4,0">

                            <Grid HeightRequest="180"
                                  HorizontalOptions="FillAndExpand"
                                  VerticalOptions="End">
                                <BoxView Color="{StaticResource AccentColor}"
                                         WidthRequest="28"
                                         HorizontalOptions="Center"
                                         VerticalOptions="End"
                                         HeightRequest="{Binding Minutes}"
                                         CornerRadius="8" />
                            </Grid>

                            <Label Text="{Binding Day}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource TextDark}"
                                   HorizontalOptions="Center" />

                            <Label Text="{Binding Minutes, StringFormat='{}{0} min'}"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource TextLight}"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Frame>

    </VerticalStackLayout>
</ContentPage>
