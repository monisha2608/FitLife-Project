<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FitLife.Views.ProgressChartPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:FitLife.ViewModels"
    xmlns:models="clr-namespace:FitLife.Models"
    x:DataType="vm:ProgressViewModel"
    Title="Progress"
    Padding="16">

    <VerticalStackLayout Spacing="16">

        <!-- Page heading -->
        <Label Text="Weekly Activity"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="{StaticResource PrimaryColor}"
               Margin="0,0,0,6"
               HorizontalOptions="Center" />

        <!-- Summary section -->
        <Frame Style="{StaticResource Card}">
            <VerticalStackLayout Spacing="6">
                <!-- Title -->
                <Label Text="Weekly Minutes vs Goal"
               FontSize="16"
               FontAttributes="Bold"
               TextColor="{StaticResource TextDark}" />

                <!-- Progress bar -->
                <ProgressBar Progress="{Binding ProgressRatio}"
                     HeightRequest="12"
                     ProgressColor="{StaticResource AccentColor}" />

                <!-- Numbers moved below bar -->
                <HorizontalStackLayout Spacing="12"
                               HorizontalOptions="Center">
                    <Label Text="{Binding MinutesSum, StringFormat='Done: {0} min'}"
                   FontSize="14"
                   FontAttributes="Bold"
                   TextColor="{StaticResource TextDark}" />
                    <Label Text="{Binding WeeklyGoalMinutes, StringFormat='Goal: {0} min'}"
                   FontSize="14"
                   FontAttributes="Bold"
                   TextColor="{StaticResource TextDark}" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Frame>


        <!-- Weekly bar chart -->
        <Frame Style="{StaticResource Card}">
            <CollectionView
                ItemsSource="{Binding Weekly}"
                SelectionMode="None"
                HeightRequest="240"
                HorizontalOptions="FillAndExpand"
                HorizontalScrollBarVisibility="Never">

                <!-- 7 columns for 7 days -->
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical"
                                     Span="7"
                                     HorizontalItemSpacing="24"
                                     VerticalItemSpacing="0" />
                </CollectionView.ItemsLayout>

                <!-- Daily bars -->
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:ProgressEntry">
                        <VerticalStackLayout
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="End"
                            Spacing="8"
                            Padding="4,0">

                            <!-- Bar height represents minutes -->
                            <Grid HeightRequest="180"
                                  HorizontalOptions="FillAndExpand"
                                  VerticalOptions="End">
                                <BoxView Color="{StaticResource AccentColor}"
                                         WidthRequest="28"
                                         HorizontalOptions="Center"
                                         VerticalOptions="End"
                                         HeightRequest="{Binding Minutes}"
                                         CornerRadius="8" />
                            </Grid>

                            <!-- Day label -->
                            <Label Text="{Binding Day}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource TextDark}"
                                   HorizontalOptions="Center" />

                            <!-- Minutes label -->
                            <Label Text="{Binding Minutes, StringFormat='{}{0} min'}"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource TextLight}"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Frame>

    </VerticalStackLayout>
</ContentPage>
