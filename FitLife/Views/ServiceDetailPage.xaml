<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FitLife.Views.ServiceDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:FitLife.ViewModels"
    x:DataType="vm:ServiceDetailViewModel"
    Title="Service Details"
    Padding="24">

    <ScrollView>
        <VerticalStackLayout Spacing="16"
                             HorizontalOptions="Center">


            <!-- BIG SERVICE NAME HEADING -->
            <Label Text="{Binding Service.Name}"
                   FontSize="40"
                   FontAttributes="Bold"
                   TextColor="Pink"
                   HorizontalTextAlignment="Center" />

            <!-- service type -->
            <Label Text="{Binding Service.Type}"
                   FontAttributes="Bold"
                   FontSize="18"
                   TextColor="{StaticResource PrimaryColor}"
                   HorizontalTextAlignment="Center" />

            <!-- description -->
            <Label Text="{Binding Service.Description}"
                   FontSize="14"
                   TextColor="#CCCCCC"
                   HorizontalTextAlignment="Center" />

            <!-- DETAILS -->
            <Label Text="{Binding Service.Trainer, StringFormat='Trainer: {0}'}"
                   HorizontalTextAlignment="Center"
                   TextColor="DarkGreen" />

            <Label Text="{Binding Service.DayOfWeek, StringFormat='Day: {0}'}"
                   HorizontalTextAlignment="Center"
                   TextColor="DarkGreen" />

            <Label Text="{Binding Service.StartTime, StringFormat='Starts: {0}'}"
                   HorizontalTextAlignment="Center"
                   TextColor="DarkGreen" />

            <Label Text="{Binding Service.DurationMins, StringFormat='Duration: {0} min'}"
                   HorizontalTextAlignment="Center"
                   TextColor="DarkGreen" />

            <Label Text="{Binding Service.Level, StringFormat='Level: {0}'}"
                   HorizontalTextAlignment="Center"
                   TextColor="DarkGreen" />

            <!-- PRICE -->
            <Label Text="{Binding Service.Price, StringFormat='Price: ${0:F2}'}"
                   FontAttributes="Bold"
                   FontSize="18"
                   TextColor="#4CAF50"
                   HorizontalTextAlignment="Center" />

            <!-- BUTTONS CENTERED -->
            <HorizontalStackLayout Spacing="12"
                                   Margin="0,20,0,0"
                                   HorizontalOptions="Center">

                <Button Text="Register"
                        Clicked="OnRegisterClicked"
                        BackgroundColor="#2196F3"
                        TextColor="Black"
                        FontAttributes="Bold"
                        CornerRadius="12"
                        Padding="20,12" />

                <Button x:Name="EditButton"
                        Text="Edit"
                        Clicked="OnEditClicked"
                        BackgroundColor="#FF9800"
                        TextColor="Black"
                        FontAttributes="Bold"
                        CornerRadius="12"
                        Padding="20,12"
                        IsVisible="False" />

                <Button x:Name="DeleteButton"
                        Text="Delete"
                        Clicked="OnDeleteClicked"
                        BackgroundColor="Tomato"
                        TextColor="Black"
                        FontAttributes="Bold"
                        CornerRadius="12"
                        Padding="20,12"
                        IsVisible="False" />

            </HorizontalStackLayout>
            <!-- Back button -->

            <Button Text="Back"
Clicked="OnBackClicked"
BackgroundColor="Wheat"
TextColor="#1E1E1E"
FontAttributes="Bold"
HorizontalOptions="FillAndExpand"
CornerRadius="10"
Padding="16,10"
Margin="0,0,0,10" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
