<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FitLife.Views.ServiceDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:FitLife.ViewModels"
    x:DataType="vm:ServiceDetailViewModel"
    Title="Service Details"
    Padding="16">

    <ScrollView>
        <VerticalStackLayout Spacing="12">

            <!-- back button -->
            <Button Text="â† Back"
                    HorizontalOptions="Start"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource PrimaryColor}"
                    Clicked="OnBackClicked" />

            <!-- service name -->
            <Label Text="{Binding Service.Name}"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="{StaticResource TextDark}" />

            <!-- service type -->
            <Label Text="{Binding Service.Type}"
                   FontAttributes="Bold"
                   TextColor="{StaticResource PrimaryColor}" />

            <!-- service description -->
            <Label Text="{Binding Service.Description}"
                   FontSize="14"
                   TextColor="{StaticResource TextLight}" />

            <!-- service details -->
            <Label Text="{Binding Service.Trainer, StringFormat='Trainer: {0}'}" />
            <Label Text="{Binding Service.DayOfWeek, StringFormat='Day: {0}'}" />
            <Label Text="{Binding Service.StartTime, StringFormat='Starts: {0}'}" />
            <Label Text="{Binding Service.DurationMins, StringFormat='Duration: {0} min'}" />
            <Label Text="{Binding Service.Level, StringFormat='Level: {0}'}" />

            <!-- price -->
            <Label Text="{Binding Service.Price, StringFormat='Price: ${0:F2}'}"
                   FontAttributes="Bold"
                   TextColor="{StaticResource AccentColor}" />

            <!-- action buttons -->
            <HorizontalStackLayout Spacing="8" Margin="0,12,0,0">

                <!-- register button -->
                <Button Text="Register"
                        Clicked="OnRegisterClicked"
                        Style="{StaticResource PrimaryButton}" />

                <!-- admin edit button -->
                <Button x:Name="EditButton"
                        Text="Edit"
                        Clicked="OnEditClicked"
                        Style="{StaticResource OutlineButton}"
                        IsVisible="False" />

                <!-- admin delete button -->
                <Button x:Name="DeleteButton"
                        Text="Delete"
                        Clicked="OnDeleteClicked"
                        BackgroundColor="Tomato"
                        TextColor="White"
                        IsVisible="False" />

            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
