<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FitLife.Views.WorkoutListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:FitLife.ViewModels"
    xmlns:models="clr-namespace:FitLife.Models"
    x:DataType="vm:WorkoutsViewModel"
    Title="Workouts"
    Padding="16">

    <VerticalStackLayout Spacing="16">

        <!-- page heading -->
        <Label Text="Workouts"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="{StaticResource PrimaryColor}"
               HorizontalOptions="Center" />

        <!-- add button (visible only for admin) -->
        <Button x:Name="AddWorkoutButton"
                Text="Add Workout"
                IsVisible="{Binding ShowAdminButton}"
                Clicked="OnAddWorkoutClicked"
                HorizontalOptions="End"
                BackgroundColor="{StaticResource PrimaryColor}"
                TextColor="White"
                CornerRadius="20" />

        <!-- workouts list -->
        <CollectionView
            ItemsSource="{Binding Workouts}"
            SelectionMode="Single"
            SelectionChanged="OnWorkoutSelected">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:WorkoutApiModel">
                    <Frame Padding="12"
                           Margin="0,0,0,10"
                           HasShadow="True"
                           CornerRadius="12"
                           BackgroundColor="{StaticResource CardBg}">
                        <VerticalStackLayout Spacing="4">

                            <!-- workout name -->
                            <Label Text="{Binding Name}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource TextDark}" />

                            <!-- workout description -->
                            <Label Text="{Binding Description}"
                                   FontSize="14"
                                   TextColor="{StaticResource TextLight}"
                                   LineBreakMode="TailTruncation" />

                            <!-- category and duration -->
                            <HorizontalStackLayout Spacing="10" Margin="0,4,0,0">
                                <Label Text="{Binding Category}"
                                       FontSize="13"
                                       TextColor="{StaticResource TextLight}" />
                                <Label Text="•"
                                       FontSize="13"
                                       TextColor="{StaticResource TextLight}" />
                                <Label Text="{Binding DurationMins, StringFormat='{}{0} min'}"
                                       FontSize="13"
                                       TextColor="{StaticResource TextLight}" />
                            </HorizontalStackLayout>

                            <!-- intensity and calories -->
                            <HorizontalStackLayout Spacing="10">
                                <Label Text="{Binding Intensity}"
                                       FontSize="13"
                                       TextColor="{StaticResource TextLight}" />
                                <Label Text="•"
                                       FontSize="13"
                                       TextColor="{StaticResource TextLight}" />
                                <Label Text="{Binding Calories, StringFormat='{}{0} cal'}"
                                       FontSize="13"
                                       TextColor="{StaticResource TextLight}" />
                            </HorizontalStackLayout>

                            <!-- service name -->
                            <Label Text="{Binding ServiceName}"
                                   FontSize="12"
                                   TextColor="{StaticResource AccentColor}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
