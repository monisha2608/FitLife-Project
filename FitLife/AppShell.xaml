<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FitLife.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:FitLife.Views"
    Title="FitLife">

    <!-- Basic theme colors for the shell -->
    <Shell.Resources>
        <Style TargetType="Shell">
            <Setter Property="Shell.BackgroundColor" Value="{StaticResource SoftBg}" />
            <Setter Property="Shell.TitleColor" Value="{StaticResource TextDark}" />
            <Setter Property="Shell.ForegroundColor" Value="{StaticResource TextDark}" />
            <Setter Property="Shell.DisabledColor" Value="{StaticResource TextLight}" />
            <Setter Property="Shell.UnselectedColor" Value="{StaticResource TextLight}" />
            <Setter Property="Shell.TabBarBackgroundColor" Value="{StaticResource CardBg}" />
            <Setter Property="Shell.TabBarTitleColor" Value="{StaticResource PrimaryColor}" />
            <Setter Property="Shell.TabBarUnselectedColor" Value="{StaticResource TextLight}" />
        </Style>
    </Shell.Resources>

    <!-- Main tabs shown when the app opens -->
    <TabBar x:Name="MainTabBar">

        <!-- Default first tab for services -->
        <ShellContent
            Title="Services"
            Route="services"
            ContentTemplate="{DataTemplate views:ServicesPage}" />

        <!-- Login screen tab -->
        <ShellContent
            Title="Login"
            Route="login"
            ContentTemplate="{DataTemplate views:LoginPage}" />

    </TabBar>

</Shell>
