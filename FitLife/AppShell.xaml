<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="FitLife.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:FitLife.Views"
    Title="FitLife">

    <!--  Shell theme colors (from App.xaml resources) -->
    <Shell.Resources>
        <Style TargetType="Shell">
            <Setter Property="Shell.BackgroundColor" Value="{StaticResource SoftBg}" />
            <Setter Property="Shell.TitleColor" Value="{StaticResource TextDark}" />
            <Setter Property="Shell.ForegroundColor" Value="{StaticResource TextDark}" />
            <Setter Property="Shell.DisabledColor" Value="{StaticResource TextLight}" />
            <Setter Property="Shell.UnselectedColor" Value="{StaticResource TextLight}" />
            <Setter Property="Shell.TabBarBackgroundColor" Value="{StaticResource CardBg}" />
            <Setter Property="Shell.TabBarTitleColor" Value="{StaticResource PrimaryColor}" />
            <Setter Property="Shell.TabBarUnselectedColor" Value="{StaticResource TextLight}" />
        </Style>
    </Shell.Resources>

    <!--  Main navigation tabs -->
    <TabBar>
        <!-- Dashboard -->
        <ShellContent
            Title="Dashboard"
            Route="dashboard"
            ContentTemplate="{DataTemplate views:DashboardPage}" />

        <!-- Workouts -->
        <ShellContent
            Title="Workouts"
            Route="workouts"
            ContentTemplate="{DataTemplate views:WorkoutListPage}" />

        <!-- Meals -->
        <ShellContent
            Title="Meals"
            Route="meals"
            ContentTemplate="{DataTemplate views:MealPlanPage}" />

        <!-- Progress -->
        <ShellContent
            Title="Progress"
            Route="progress"
            ContentTemplate="{DataTemplate views:ProgressChartPage}" />
    </TabBar>

</Shell>
