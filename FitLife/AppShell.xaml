            Title="Workouts"
            ContentTemplate="{DataTemplate views:WorkoutListPage}"
            Route="workouts"
            Icon="ðŸ’ª" />

        <!-- ðŸŽ Meals -->
        <ShellContent
            Title="Meals"
            ContentTemplate="{DataTemplate views:MealPlanPage}"
            Route="meals"
            Icon="ðŸŽ" />

        <!-- ðŸ“ˆ Progress -->
