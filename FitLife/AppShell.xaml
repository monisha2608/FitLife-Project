<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="FitLife.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:FitLife.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent Route="Dashboard" Title="Dashboard" Icon="icon_home.png" ContentTemplate="{DataTemplate views:DashboardPage}" />
        <ShellContent Route="Workouts"  Title="Workouts" Icon="icon_workout.png" ContentTemplate="{DataTemplate views:WorkoutListPage}" />
        <ShellContent Route="Meals"     Title="Meals" Icon="icon_meal.png" ContentTemplate="{DataTemplate views:MealPlanPage}" />
        <ShellContent Route="Progress"  Title="Progress" Icon="icon_progress.png" ContentTemplate="{DataTemplate views:ProgressChartPage}" />
    </TabBar>
</Shell>
